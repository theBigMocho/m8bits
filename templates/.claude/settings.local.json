{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(wsl:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/capture-wsl-clipboard.py"
          },
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/log-prompt.py"
          },
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/log-chat-history.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/log-chat-history.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/save-images.py"
          },
          {
            "type": "command",
            "command": "python .claude/logs_system/hooks/log-chat-history.py"
          }
        ]
      }
    ]
  }
}
